
@{
    ViewData["Title"] = "TaskView";
}

<h1>TaskView</h1>

<div class="row">
    @foreach (var task in Model)
    {
        <div class="col-md-4">
            <div class="card" style="width:18rem;height:200px;">
                <div class="card-body">
                    <h5 class="card-title">@task.Title</h5>
                    <p class="card-text">@task.Description</p>
                    <p class="card-text">Deadline: @task.DeadLine</p>
                    @Html.ActionLink("Add File", "Create","Files", new { id = SecuringApplication.Utility.Encryption.SymmetricEncrypt(task.Id.ToString()) })
                </div>
            </div>
        </div>
    }

</div>

