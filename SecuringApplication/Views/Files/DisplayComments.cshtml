
@{
    ViewData["Title"] = "DisplayComments";
}

<h1>ViewFiles</h1>
<div class="row">
    @Html.AntiForgeryToken()
    @foreach (var comment in Model)
    {
        <div class="col-md-4">
            <div class="card" style="width:18rem;height:200px;">
                <div class="card-body">
                    <h5 class="card-title">@comment.Comment</h5>
                </div>
            </div>
        </div>
    }

</div>

